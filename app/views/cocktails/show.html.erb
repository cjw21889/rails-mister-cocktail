<div class="container">
  <h1><%= @cocktail.name %></h1>

  <% @cocktail.doses.each do |dose| %>
  <div class="dose-card">
    <%= dose.description %>
    <%= dose.ingredient.name %>
  </div>
  <% end %>

  <div class="btn btn-sucess"><%= link_to "Add A Dose", new_cocktail_dose_path(@cocktail)  %></div>
</div>
